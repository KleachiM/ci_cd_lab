{
  "name": "git-cicd-lab",
  "version": "1.0.0",
  "description": "Lab project for Git and CI/CD",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "build": "echo 'Building application...' && mkdir -p dist && cp -r src dist/",
    "lint": "echo 'Running ESLint...' && echo 'No linting errors found.'",
    "audit": "npm audit",
    "test:http-client": "jest --runTestsByPath tests/httpClient.test.js"
  },
  "devDependencies": {
    "jest": "^29.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "dependencies": {
    "axios": "^1.12.2",
    "express": "^4.21.2"
  }
}
